# ============================================================================
# JWT Configuration
# ============================================================================
# Secret key for JWT encoding/decoding (use strong random string in production)
SECRET_KEY=your-secret-key-change-this-in-production

# JWT algorithm (HS256, RS256, etc)
ALGORITHM=HS256

# Token expiry: 240 minutes = 4 hours
ACCESS_TOKEN_EXPIRE_MINUTES=240


# ============================================================================
# MongoDB Configuration (Optional)
# ============================================================================
# MongoDB connection URL (Atlas or local)
MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority

# MongoDB database name
MONGODB_DB_NAME=your_database_name


# ============================================================================
# Supabase Configuration (Optional)
# ============================================================================
# Supabase project URL
SUPABASE_URL=https://your-project.supabase.co

# Supabase anon/public key
SUPABASE_KEY=your_supabase_anon_key


# ============================================================================
# PostgreSQL Configuration (Required)
# ============================================================================
# PostgreSQL username
POSTGRES_USER=your_postgres_user

# PostgreSQL password
POSTGRES_PASSWORD=your_postgres_password

# PostgreSQL host (localhost, or cloud provider host)
POSTGRES_HOST=localhost

# PostgreSQL port (default: 5432)
POSTGRES_PORT=5432

# PostgreSQL database name
POSTGRES_DB=your_database_name


# ============================================================================
# Example PostgreSQL Connection Strings
# ============================================================================
# Local PostgreSQL:
# postgresql://postgres:password@localhost:5432/mydb

# Neon (Serverless PostgreSQL):
# postgresql://username:password@ep-example.region.aws.neon.tech/database?sslmode=require

# Supabase PostgreSQL:
# postgresql://postgres:password@db.project.supabase.co:5432/postgres

# Railway:
# postgresql://postgres:password@containers.railway.app:7432/railway
